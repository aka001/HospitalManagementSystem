<% @page_title="Admin Menu"%>
<%@page_slug="admin"%>
<br/>
<div>
	<ul>
		<% if @flag1 == 1 %>
			<%= render(:partial =>'/users/doctor_role') %>
		<% elsif @flag2 == 1 %>
			<%= render(:partial =>'/users/patient_role') %>
		<% elsif @flag3 == 1 %>
			<%= render(:partial => '/users/assistant_role') %>
		<% elsif @flag4 == 1 %>
			<%= render(:partial => '/users/admin_role') %>
		<% end %>
		<div class="page-header">
		<h2>Notifications</h2>
		</div>
		<%n=Notification.where(:user_id=>session[:user_id]).order("created_at DESC")%>
		<%n.each do |t|%>
		<blockquote>
		<%=t['notification']%>
		<br/>
		Click <a href="<%=raw t['links']%>">here</a> for additional info.<br/>
		<small><%=t['created_at']%></small>
		</blockquote>
		<hr/>
		<%end%>
	</ul>
</div>
