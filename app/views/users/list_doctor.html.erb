<%= link_to("<<Back to lists", {:action => 'list_doctor'}, :class => "back-link") %>
<br/>
<%= link_to("Create Doctor", {:action => 'new_doctor'}, :class => "back-link") %>
<div>
	<% if !(@doctors.empty?) %>
		<table>
			<thead>
				<th>Username</th>
				<th>Name</th>
				<th>Gender</th>
				<th>Date_of_birth</th>
				<th>Address</th>
				<th>Qualification</th>
				<th>Action</th>
			</thead>
			
				<% @doctors.each do |doctor| %>
				<tr>
					<% user= doctor.users %>
					<% if !(user.empty?) %>
						<% user=user.first %>
						<td><%= user.username%></td>
					<% end %>
					<td><%= doctor.name %></td>
					<td><%= doctor.gender %></td>
					<td><%= doctor.date_of_birth %></td>
					<td><%= doctor.address %></td>
					<td><%= doctor.qualification %></td>
					<td><%= user.id %></td>
					<td><%= link_to("Show", {:action => 'show_doctor', :id => user.id}, :class => "back-link") %></td>
					<td><%= link_to("Edit", {:action => 'edit_doctor', :id => user.id}, :class => "back-link") %></td>
					<td><%= link_to("Delete", {:action => 'delete_doctor', :id => user.id }, :class => "back-link") %></td>	
				</tr>>
				<% end %>
		</table>
	<% else %>
		<h2>No records yet</h2>
	<% end %>
</div>