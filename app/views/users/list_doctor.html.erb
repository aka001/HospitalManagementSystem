<br/>
<%= link_to("Create Doctor", {:action => 'new_doctor'}, :class => "btn btn-primary") %>
<br/>
<div>
	<% if !(@doctors.empty?) %>
		<table class="table table-hover">
			<thead>
				<th>Username</th>
				<th>Name</th>
				<th>Contact Number</th>
				<th>Action</th>
			</thead>
			
				<% @doctors.each do |doctor| %>
				<tr>
					<% user= doctor.users %>
					<% if !(user.empty?) %>
						<% user=user.first %>
						<td><%= user.username%></td>
					<% end %>
					<td><%= doctor.name %></td>
					<td><%= doctor.contact_number%></td>
					<td><%= link_to("Show", {:action => 'show_doctor', :id => user.id}, :class => "btn btn-success") %></td>
					<% if @role.name == 'admin'%>
						<td><%= link_to("Edit", {:action => 'edit_doctor', :id => user.id}, :class => "btn btn-warning") %></td>
						<td><%= link_to("Delete", {:action => 'delete_doctor', :id => user.id }, :class => "btn btn-danger") %></td>
					<% end %>
				</tr>
				<% end %>
		</table>
	<% else %>
		<h2>No records yet</h2>
	<% end %>
</div>