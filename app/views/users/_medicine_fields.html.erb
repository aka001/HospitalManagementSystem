<div class="form-inline fields">
	<div class="form-group">
    <%= f.text_field :name,placeholder:"Drug name",class:"form-control",'data-provide'=>"typeahead",'data-source'=>@name%>
    </div>
    <div class="form-group">
    <%= f.text_field :quantity,placeholder:"quantity (in mg)",maxlength:4,class:"form-control"%>
    </div>
    <div class="form-group">
    <%= f.text_field :sigcode,placeholder:"Sigcode",maxlength:5,class:"form-control",'data-provide'=>"typeahead",'data-source'=>@sigs%>
    </div>
    <%= link_to_remove_fields "remove", f %><hr/>
</div>


