<table>
	<tr>
		<th>Username</th>
		<%val = ""; 8.times{val  << (65 + rand(25)).chr}%>
		<td><%= f.text_field(:username,class:"form-control",value:val,required:'') %></td>
	</tr>
	<tr>
		<th>Name</th>
		<%v=@assistants.name%>
		<td><%= f.text_field(:name,class:"form-control",required:'',value:v) %></td>
	</tr>
	<tr>
		<th>Gender</th>
		<%v=@assistants.gender%>
		<td><%= f.select(:gender,['M','F'],class:"form-control",value:v) %></td>
	</tr>
	<tr>
		<th>Date of Birth</th>
		<%v=@assistants.date_of_birth%>
		<td><%= f.datetime_select(:date_of_birth,class:"form-control",start_year:1935,value:v) %></td>
	</tr>
	<tr>
		<th>Address</th>
		<%v=@assistants.permanent_address%>
		<td><%= f.text_area(:permanent_address,class:"form-control",value:v) %></td>
	</tr>
	<tr>
		<th>Email</th>
		<%v=@assistants.email%>
		<td><%= f.text_field(:email,class:"form-control",value:v) %></td>
	</tr>
	<tr>
		<th>Education</th>
		<%v=@assistants.education%>
		<td><%= f.text_field(:education,class:"form-control",value:v) %></td>
	</tr>
	<tr>
		<th>Biodata</th>
		<%v=@assistants.biodata%>
		<td><%= f.text_field(:biodata,class:"form-control",value:v) %></td>
	</tr>
	<tr>
		<th>Salary</th>
		<%v=@assistants.salary%>
		<td><%= f.text_field(:salary,class:"form-control",value:v) %></td>
	</tr>
</table>
