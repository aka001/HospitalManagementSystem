<link href="/assets/bootstrap-combobox.css" rel="stylesheet">
<form action="advanced_search_perform_function" method="get">
	<em>Name: </em><input type="text" name="name"><br>
	<div class="side-by-side clearfix">
	<span>Specialisation:</span>
	<select class="combobox" class="spec" name="spec">
		<option value=""></option>
		<% @spec.each do |spec|%>
			<option value="<%=spec.name%>"><%=spec.name%></option>
		<%end%>
	</select>
	<div style="display: inline;">City:</div>
	<select class="combobox input-large" name="city">
		<option value=""></option>
		<% @city.each do |city|%>
			<option value="<%=city.name%>"><%=city.name%></option>
		<%end%>
	</select>
	</div>
	<input type="submit" value="submit">
</form>
<% if @doctors != nil %>
		<table class="table table-striped">
			<thead>
				<th>Username</th>
				<th>Name</th>
				<th>Contact Number</th>
				<th>Status</th>
				<th>Details</th>
			</thead>
			
				<% @doctors.each do |doc| %>
				<tr>
					<% doctor=Doctor.find(doc['id']) %>
					<% user= doctor.users %>
					<% if !(user.empty?) %>
						<% user=user.first %>
						<td><%= user.username%></td>
					<% end %>
					<td><%= doctor.name %></td>
					<td><%= doctor.contact_number %></td>
					<% out = Favourite.where(:doctor_id => doctor.id, :patient_id => @patient.id) %>
					<% if out.empty? %>
						<td><%= link_to("Add to Favourites", {:action => 'favourite_action', :id => 1, :id1 => doctor.id, :redirect => 1}, :class => "back-link") %></td>
					<% else %>
						<td><%= link_to("Remove from Favourites", {:action => 'favourite_action', :id => 2, :id1 => doctor.id, :redirect => 1}, :class => "back-link") %></td>
					<% end %>
					<td><%= link_to("Show", {:action => 'show_doctor', :id => user.id}, :class => "btn btn-success") %></td>
				</tr>
				<% end %>
		</table>
<% end %>
<script type="text/javascript">
